<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rentme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main_02</item>
        <item name="colorPrimaryVariant">@color/orange_main_01</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_main_01</item>
        <item name="colorSecondaryVariant">@color/orange_main_02</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/orange_main_02</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="border_radius">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="border_radius_8">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="bottom_corner_radius">
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>
<!--    this for sherzod information page-->
    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


</resources>